!!! 5
-# http://paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither
-ie_html :class => 'no-js', :lang => 'en' do
  %head
    %meta{ :charset => "utf-8" }/

    -# Always force latest IE rendering engine (even in intranet) & Chrome Frame
    -# Remove this if you use the .htaccess
    %meta{ "http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1" }/

    -# Allow views to modify title if desired
    %title Getup - Authentication

    -# Mobile viewport optimized: j.mp/bplateviewport
    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }/

    -# All JavaScript at the bottom, except for Modernizr and Respond.
    -# Modernizr enables HTML5 elements & feature detects; Respond is a polyfill for min/max-width CSS3 Media Queries
    = javascript_include_tag 'modernizr.min'

    = csrf_meta_tag

    = stylesheet_link_tag 'auth.css', :media => 'all'

  %body{ :class => "console #{controller.controller_name} #{controller.action_name}" }

    %div.content
      %header.getup
        .wrap
          %h1.getup-sprite.logo Getup
          %h2.app Openshift Console

      %section
        %div.signin{ :id => 'signin' }
          %h2 Dashboard Authentication
          %form{:action => auth_path, :id => 'form-authentication', :method => 'post'}
            %fieldset
              = token_tag(nil)
              = email_field_tag 'login', '', :placeholder => "Login", :required => ''
              = password_field_tag 'password', '', :placeholder => "Password", :required => ''

              %button.getup-sprite Sign in
              = link_to "Forgot your password?", reset_path, :id =>  'forgot'

        = flashes

    = javascript_include_tag 'auth'

